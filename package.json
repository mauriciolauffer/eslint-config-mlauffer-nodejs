{
  "name": "eslint-config-mlauffer-nodejs",
  "version": "3.0.0",
  "description": "ESLint shareable config for Nodejs",
  "private": false,
  "author": "Mauricio Lauffer",
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@9.12.2",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "lint": "prettier . --check --cache && eslint . --cache",
    "lint:ci": "eslint . -f @microsoft/eslint-formatter-sarif -o eslint.sarif",
    "pretty": "prettier . --write --cache",
    "test": "vitest run"
  },
  "keywords": [
    "eslint",
    "config",
    "javascript",
    "node",
    "nodejs"
  ],
  "dependencies": {
    "@eslint/js": "^9.17.0",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "eslint-plugin-jsdoc": "^50.6.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.1",
    "globals": "^15.13.0"
  },
  "devDependencies": {
    "@eslint/config-inspector": "^0.6.0",
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.10.2",
    "prettier": "^3.4.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "eslint": ">=9"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mauriciolauffer/eslint-config-mlauffer-nodejs.git"
  },
  "bugs": {
    "url": "https://github.com/mauriciolauffer/eslint-config-mlauffer-nodejs.git/issues"
  }
}
